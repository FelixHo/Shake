<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageFragment" >
    
    <RelativeLayout
        android:id="@+id/image_frag_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的图库"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/image_frag_menu_button"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/menu_button_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/image_frag_connect_button"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_button_selector" />
    </RelativeLayout>
    
    <GridView
        android:id="@+id/image_frag_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_frag_title_layout"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dip" >
  
    </GridView> 
    
</RelativeLayout>
