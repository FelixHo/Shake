<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicFragment" >

    <RelativeLayout
        android:id="@+id/music_frag_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的音乐"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/music_frag_menu_button"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/menu_button_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/music_frag_connect_button"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_button_selector" />
    </RelativeLayout>

    <ListView
        android:id="@+id/music_frag_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/music_frag_title_layout"
        android:fastScrollEnabled="true">

    </ListView>
    
</RelativeLayout>